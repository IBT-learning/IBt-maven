pipeline{
agent any

    tools{ maven 'maven_3.8'}
    stages{
        stage('Git Download'){
            steps{
                git branch: 'feature_shammac', changelog: false, credentialsId: '299d6ea0-24ed-4fc9-a11d-6bb09bc88140', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
        }
        stage('validate'){
            steps{
                withMaven(globalMavenSettingsConfig: '', jdk: '', maven: 'maven_3.9.3', mavenSettingsConfig: '', traceability: false) {
                    sh 'mvn validate'
                }
            }
        }
        stage('compile'){
            steps{
                sh 'mvn compile'
            }
        }
        stage ('Test'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Package'){
            steps{
                sh 'mvn package'
            }
        }
        stage('Upload to Artifactory'){
            steps{
                withCredentials([file(credentialsId: 'shamrin_mvn_settings_xml', variable: 'mvn_settings_shams')]) {
                    sh 'mvn deploy -s $mvn_settings_shams'
                }
            }
        } /*
        stage('Dependency Scan'){
            steps{

            }
        } */

        stage('upload to server'){
            steps{
                script{
                    def remote = [name: 'dev', host:'146.190.124.218', allowAnyHosts: true]
                    withCredentials([usernamePassword(credentialsId: 'server-ssh-pw', passwordVariable: 'password', usernameVariable: 'user')]) {
                        remote.user = user
                        remote.password = password
                        sshPut remote: remote, from: 'target/ibt-maven-1.0-SNAPSHOT.jar', into: '/opt/tomcat/webapps'
                    }
                }
            }
        }

    }

}